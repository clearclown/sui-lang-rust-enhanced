{
  "name": "sui-lang",
  "displayName": "Sui Language",
  "description": "Sui (ç²‹) - A programming language optimized for LLM code generation",
  "version": "0.2.0",
  "publisher": "sui-lang",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Linters"
  ],
  "keywords": [
    "sui",
    "llm",
    "code-generation",
    "programming-language"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/clearclown/sui-lang-rust-enhanced"
  },
  "license": "MIT",
  "icon": "icon.png",
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:sui"
  ],
  "contributes": {
    "languages": [
      {
        "id": "sui",
        "aliases": [
          "Sui",
          "sui"
        ],
        "extensions": [
          ".sui"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "sui",
        "scopeName": "source.sui",
        "path": "./syntaxes/sui.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "sui",
        "path": "./snippets/sui.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Sui Language",
      "properties": {
        "sui.lsp.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable the Sui language server"
        },
        "sui.lsp.path": {
          "type": "string",
          "default": "sui-lsp",
          "description": "Path to the sui-lsp executable"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.80.0",
    "typescript": "^5.0.0",
    "@vscode/vsce": "^2.22.0"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  }
}
