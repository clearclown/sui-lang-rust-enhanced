{
  "comments": {
    "lineComment": ";"
  },
  "brackets": [
    ["{", "}"]
  ],
  "autoClosingPairs": [
    { "open": "{", "close": "}" },
    { "open": "\"", "close": "\"" }
  ],
  "surroundingPairs": [
    { "open": "{", "close": "}" },
    { "open": "\"", "close": "\"" }
  ],
  "folding": {
    "markers": {
      "start": "^\\s*#\\s*\\d+",
      "end": "^\\s*\\}"
    }
  },
  "wordPattern": "[a-zA-Z_][a-zA-Z0-9_]*|[vga]\\d+|\\d+\\.?\\d*"
}
